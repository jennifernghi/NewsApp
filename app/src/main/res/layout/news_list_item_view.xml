<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp"
    android:background="@drawable/list_item_view_border">

    <TextView
        android:id="@+id/headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="news headline"
        android:paddingLeft="4dp"/>
    <ImageView
        android:id="@+id/news_thumbnail"
        android:layout_below="@id/headline"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="8dp"
       android:scaleType="centerCrop"
        android:src="@drawable/default_background"
        />

    <LinearLayout
        android:id="@+id/news_text_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headline"
        android:layout_toRightOf="@id/news_thumbnail"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/contributor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:textSize="14sp"
                tools:text="Author: name" />

            <TextView
                android:id="@+id/published_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                tools:text="publish date"
                android:maxLines="1"
                android:ellipsize="end"
                />


        </LinearLayout>

        <TextView
            android:id="@+id/section_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            tools:text="section name"
            android:layout_marginTop="4dp" />
        <TextView
            android:id="@+id/trail_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            tools:text="Trail Text..." />


    </LinearLayout>
</RelativeLayout>